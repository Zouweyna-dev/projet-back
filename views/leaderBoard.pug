extends layouts/layout.pug

block content
    title Tableau de classement
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles/leader.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css')

    body
        .container
            h1 Tableau de classement
            table.table
                thead
                    tr
                        th Joueur
                        th Score le plus élevé
                        th Temps de jeu total (minutes)
                tbody
                    if leaderboard && leaderboard.length
                        each session in leaderboard
                            tr
                                td
                                    img.icon(src='/path/to/icon.png', alt='Icon')
                                    | #{session.playerId}
                                td= session.highestScore
                                td= (session.totalPlaytime / 60000).toFixed(2) + ' min'
                    else
                        tr
                            td(colspan='3', class='no-data') Aucun joueur trouvé.
